{
  "version": 8,
  "name": "Minimal Citizen Style",
  "metadata": {
    "mapbox:autocomposite": true,
    "mapbox:type": "template"
  },
  "sources": {
    "mapbox": {
      "url": "mapbox://mapbox.mapbox-streets-v8",
      "type": "vector"
    }
  },
  "sprite": "mapbox://sprites/mapbox/dark-v10",
  "glyphs": "mapbox://fonts/mapbox/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#0a0a0a"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "mapbox",
      "source-layer": "water",
      "paint": {
        "fill-color": "#001829",
        "fill-opacity": 1
      }
    },
    {
      "id": "land",
      "type": "background",
      "paint": {
        "background-color": "#0f0f0f"
      }
    },
    {
      "id": "building-base",
      "type": "fill",
      "source": "mapbox",
      "source-layer": "building",
      "paint": {
        "fill-color": "#1a1a1a",
        "fill-opacity": 0.3
      }
    },
    {
      "id": "road-primary",
      "type": "line",
      "source": "mapbox",
      "source-layer": "road",
      "filter": ["in", ["get", "class"], ["literal", ["primary", "motorway"]]],
      "paint": {
        "line-color": "#333333",
        "line-opacity": 0.7,
        "line-width": ["interpolate", ["linear"], ["zoom"], 10, 1, 18, 6]
      }
    },
    {
      "id": "road-secondary",
      "type": "line",
      "source": "mapbox",
      "source-layer": "road",
      "filter": ["in", ["get", "class"], ["literal", ["secondary", "street"]]],
      "paint": {
        "line-color": "#262626",
        "line-opacity": 0.5,
        "line-width": ["interpolate", ["linear"], ["zoom"], 10, 0.5, 18, 3]
      }
    },
    {
      "id": "place-label-city",
      "type": "symbol",
      "source": "mapbox",
      "source-layer": "place_label",
      "filter": ["==", ["get", "type"], "city"],
      "minzoom": 8,
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Inter Regular", "Noto Sans Regular"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 8, 10, 12, 14],
        "text-anchor": "center",
        "text-transform": "uppercase",
        "text-letter-spacing": 0.15
      },
      "paint": {
        "text-color": "#666666",
        "text-halo-color": "#000000",
        "text-halo-width": 1,
        "text-opacity": 0.7
      }
    },
    {
      "id": "country-label",
      "type": "symbol",
      "source": "mapbox",
      "source-layer": "place_label",
      "filter": ["==", ["get", "type"], "country"],
      "maxzoom": 6,
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Inter Regular", "Noto Sans Regular"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 2, 12, 6, 16],
        "text-anchor": "center",
        "text-transform": "uppercase",
        "text-letter-spacing": 0.3
      },
      "paint": {
        "text-color": "#555555",
        "text-halo-color": "#000000",
        "text-halo-width": 1.5,
        "text-opacity": 0.6
      }
    }
  ]
}